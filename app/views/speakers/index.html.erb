<p id="notice"><%= notice %></p>

<h1>Listing Speakers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Website</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speakers.each do |speaker| %>
      <tr>
        <td><%= speaker.first_name %></td>
        <td><%= speaker.last_name %></td>
        <td><%= speaker.website %></td>
        <td><%= speaker.company %></td>
        <td><%= link_to 'Show', speaker %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
          <td><%= link_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

